<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--需要将命名空间改造成对应接口的全类名-->
<mapper namespace="com.cskaoyan.mapper.userManage.FeedBackMapper">
    <resultMap id="feedMapper" type="com.cskaoyan.bean.userManage.FeedBack">
        <result property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="username" column="username"/>
        <result property="mobile" column="mobile"/>
        <result property="feedType" column="feed_type"/>
        <result property="content" column="content"/>
        <result property="status" column="status"/>
        <result property="hasPicture" column="has_picture"/>
        <result property="addTime" column="add_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="deleted" column="deleted"/>
        <result property="picUrls" column="pic_urls"/>
    </resultMap>
    <!--查询所有意见反馈-->
    <select id="queryFeedBack" resultMap="feedMapper">
        select
            id,
            user_id,
            username,
            mobile,
            feed_type,
            content,
            status,
            has_picture,
            pic_urls,
            add_time,
            update_time,
            deleted
        from cskaoyan_mall_feedback
    </select>

    <!--通过用户名查询反馈-->
    <select id="queryFeedBackByUsername" resultMap="feedMapper">
        select
            id,
            user_id,
            username,
            mobile,
            feed_type,
            content,
            status,
            has_picture,
            pic_urls,
            add_time,
            update_time,
            deleted
        from cskaoyan_mall_feedback
        where username like #{username}
    </select>

    <!--通过反馈id查询全部反馈-->
    <select id="queryFeedBackByFeedbackId" resultMap="feedMapper">
        select
            id,
            user_id,
            username,
            mobile,
            feed_type,
            content,
            status,
            has_picture,
            pic_urls,
            add_time,
            update_time,
            deleted
        from cskaoyan_mall_feedback
        where id = #{id}
    </select>

    <!--通过反馈id和用户名查询反馈-->
    <select id="queryFeedBackByFeedBackIdAndUsername" resultMap="feedMapper">
        select
            id,
            user_id,
            username,
            mobile,
            feed_type,
            content,
            status,
            has_picture,
            pic_urls,
            add_time,
            update_time,
            deleted
        from cskaoyan_mall_feedback
        where id = #{id} and username like #{username}
    </select>
</mapper>
